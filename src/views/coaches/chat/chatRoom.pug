extends ../../layout
block title
  title Questions
block style
  link(rel='stylesheet' href='/css/mystyles/coach.css')
block content
  body
    .messaging.container
      h3.text-center Answer Trainees' Question
      .inbox_msg
        .inbox_people
          .headind_srch
            .recent_heading
              h4 Trainees List
          .inbox_chat
            if trainees
              each trainee in trainees
                .chat_list(class=`${trainee.traineeId == roomId ? "active_chat" : ""}`)
                  .chat_people
                    .chat_img
                      img(src='https://ptetutorials.com/images/user-profile.png', alt='sunil')
                    .chat_ib
                      h5
                        a(href=`/coachProfile/chatQuestions/${trainee.traineeId}`)= trainee.user.userName            
        .mesgs
          .msg_history
            #messages
          .type_msg
            .input_msg_write
              form#message-form
                input(type="hidden", name="roomId", value=roomId)
                input(type="hidden", name="username", value=username)
                input.write_msg(type='text', name='message', placeholder='Type a message', required='', autocomplete='off')
                button.msg_send_btn
                  i.fa.fa-paper-plane

block scripts
  script(src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js")
  script(src="/socket.io/socket.io.js")
  script(src="/js/chat.js")
