    block style

  body
    if user
      if user.traineeId
        nav#ftco-navbar.navbar.navbar-expand-lg.navbar-dark.ftco_navbar.bg-dark.ftco-navbar-light
          .container
            a.navbar-brand(href="/")
              img(class="logo" src="/images/logo.png", alt="logo")
            button.navbar-toggler(type='button', data-toggle='collapse', data-target='#ftco-nav', aria-controls='ftco-nav', aria-expanded='false', aria-label='Toggle navigation')
              span.oi.oi-menu
              |  Menu
            #ftco-nav.collapse.navbar-collapse
              ul.navbar-nav.ml-auto
                li.nav-item
                  a.nav-link(href='/traineeProfile') My Workouts
                li.nav-item
                  a.nav-link(href='/traineeProfile/timeSlots') Available Time Slots
                li.nav-item
                  a.nav-link(href=`/traineeProfile/askQuestion`) Ask Coaches
                li.nav-item
                  div(class="dropdown nav-link")
                    button.dropbtn Settings
                    .dropdown-content
                      a(href='/traineeProfile/settings') General Account Settings
                      a(href='/logout') Log out                
      else
        nav#ftco-navbar.navbar.navbar-expand-lg.navbar-dark.ftco_navbar.bg-dark.ftco-navbar-light
          .container
            a.navbar-brand(href="/")
              img(class="logo" src="/images/logo.png", alt="logo")
            button.navbar-toggler(type='button', data-toggle='collapse', data-target='#ftco-nav', aria-controls='ftco-nav', aria-expanded='false', aria-label='Toggle navigation')
              span.oi.oi-menu
              |  Menu
            #ftco-nav.collapse.navbar-collapse
              ul.navbar-nav.ml-auto
                li.nav-item
                  a.nav-link(href='/coachProfile') My Trainees
                li.nav-item
                  a.nav-link(href='/coachProfile/chatQuestions') Chat Questions
                li.nav-item
                  div(class="dropdown nav-link")
                    button.dropbtn Activities
                    .dropdown-content
                      a(href='/coachProfile/workouts/new') Create Workout
                      a(href='/coachProfile/restdays/new') Create Rest Day
                      a(href='/coachProfile/weekPlans/new') Create Week Plan
                      a(href='/coachProfile/workouts') Workouts
                      a(href='/coachProfile/restdays') Rest Days
                      a(href='/coachProfile/weekPlans') Week Plans
                li.nav-item
                  a.nav-link(href='/coachProfile/timeSlots') Time Slots
                li.nav-item
                  a.nav-link(href='/coachProfile/managePrivateSessions') Private Sessions
                li.nav-item
                  div(class="dropdown nav-link")
                    button.dropbtn Settings
                    .dropdown-content
                      a(href='/coachProfile/settings') General Account Settings
                      a(href='/logout') Log out
    else
      nav#ftco-navbar.navbar.navbar-expand-lg.navbar-dark.ftco_navbar.bg-dark.ftco-navbar-light
        .container
          a.navbar-brand(href="/")
            img(class="logo" src="/images/logo.png", alt="logo")
          button.navbar-toggler(type='button', data-toggle='collapse', data-target='#ftco-nav', aria-controls='ftco-nav', aria-expanded='false', aria-label='Toggle navigation')
            span.oi.oi-menu
            |  Menu
          #ftco-nav.collapse.navbar-collapse
            ul.navbar-nav.ml-auto
              li.nav-item
                div(class="dropdown nav-link")
                  button.dropbtn Sign up
                  .dropdown-content
                    // a(href='/users/coaches/signup') Coach
                    a(href='/users/trainees/signup') Trainee
              li.nav-item
                a.nav-link(href='/users/login') Login

