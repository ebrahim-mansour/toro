extends ../layout
block title
  title Questions
block style
  link(rel='stylesheet' href='/css/mystyles/trainee.css')
block content
  body    
    .messaging.container
      h3.text-center Ask your questions and our coaches is ready to help you!
      .inbox_msg
        .mesgs
          .msg_history
            #messages
          .type_msg
            .input_msg_write
              form#message-form
                input(type="hidden", name="roomId", value=roomId)
                input(type="hidden", name="username", value=username)
                input.write_msg(type='text', name='message', placeholder='Type a message', required='', autocomplete='off')
                button.msg_send_btn
                  i.fa.fa-paper-plane
block scripts
  script(src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js")
  script(src="/socket.io/socket.io.js")
  script(src="/js/chat.js")
